<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingTop="40dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".AddMaintenanceActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:text="Vehicle Name" />

    <Spinner
        android:id="@+id/spMVehicleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:drawable/btn_dropdown" />

    <EditText
        android:id="@+id/txtMVehicleKilometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_kilometer"
        android:drawablePadding="25dp"
        android:hint="Enter Kilometer"
        android:layout_margin="10dp"
        android:background="@drawable/textbox"/>

    <EditText
        android:id="@+id/txtMaintenanceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:drawableLeft="@drawable/service"
        android:drawablePadding="25dp"
        android:hint="Enter Other Maintenance"
        android:layout_margin="10dp"
        android:background="@drawable/textbox"/>

    <EditText
        android:id="@+id/txtMaintenanceCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_dollar"
        android:drawablePadding="25dp"
        android:hint="Enter Other Maintenance Cost"
        android:layout_margin="10dp"
        android:inputType="number"
        android:background="@drawable/textbox"/>

    <Button
        android:id="@+id/btnAddMaintenance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button_bg"
        android:text="Submit" />

</LinearLayout>