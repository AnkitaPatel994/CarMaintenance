<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/car_service" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="10dp">

            <LinearLayout
                android:id="@+id/llVehicle"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/round_button">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:tint="#fff"
                    android:src="@drawable/ic_car" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:text="Vehicle\n"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="10dp">

            <LinearLayout
                android:id="@+id/llOilChangeMaintenance"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/round_button">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:tint="#fff"
                    android:src="@drawable/ic_oil" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:text="Oil Change\n Maintenance"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="10dp">

            <LinearLayout
                android:id="@+id/llServiceReport"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/round_button">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:tint="#fff"
                    android:src="@drawable/reportservice" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:text="Service\nReport"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="10dp">

            <LinearLayout
                android:id="@+id/llDriver"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/round_button">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:tint="#fff"
                    android:src="@drawable/ic_driver" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:text="Driver\n"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="10dp">

            <LinearLayout
                android:id="@+id/llEveryDayCashOut"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/round_button">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:tint="#fff"
                    android:src="@drawable/ic_dollar" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:text="Every Day\nCash out"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="10dp">

            <LinearLayout
                android:id="@+id/llEveryDayReport"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/round_button">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:tint="#fff"
                    android:src="@drawable/ic_report" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:text="Every Day\nReport"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>